<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prueba</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<style>
    .custom-navbar {
        background: #1c1f26;
        border-bottom: 3px solid #ff8c00;
    }

    .navbar-brand {
        font-weight: bold;
        font-size: 1.5em;
        color: #ffa500 !important;
    }

    .dropdown-menu-dark .dropdown-item:hover {
        background-color: #ff8c00;
        color: black;
    }

    .navbar-text {
        color: #f0f0f0;
    }
</style>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<body>
    @{
        var currentController = ViewContext.RouteData.Values["controller"].ToString();
        var currentAction = ViewContext.RouteData.Values["action"].ToString();
    }

    @if (!(currentController == "Account" && (currentAction == "Login" || currentAction == "Register")))
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Prueba", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                        <li>@Html.ActionLink("Consulta Clientes", "Index", "Consumo")</li>
                        <li>@Html.ActionLink("Palíndromos", "Index", "Palindromos")</li>
                    </ul>
                </div>
            </div>
        </div>

    }

    <div class="@(currentController == "Account" && (currentAction == "Login" || currentAction == "Register") ? "" : "container body-content")">
        @RenderBody()
        <hr />
        @if (!(currentController == "Account" && (currentAction == "Login" || currentAction == "Register")))
        {
            <footer>
                <p>&copy; @DateTime.Now.Year - Byron G. Santos P.</p>
            </footer>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
